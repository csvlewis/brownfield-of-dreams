<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <% if current_user.github_token %>
    <h3>Github</h3>
    <div class="repos">
      <% facade.user_repos[0..4].each do |repo| %>
        <%= link_to "#{repo.name}", repo.url %>
        <br>
        <br>
      <% end %>
    </div>
    <h4>Followers</h4>
    <div class="followers">
      <% facade.user_followers.each do |follower| %>
        <%= link_to "#{follower.name}", follower.url %>
        <br>
        <br>
      <% end %>
    </div>
    <h4>Following</h4>
    <div class="following">
      <% facade.user_following.each do |following| %>
        <%= link_to "#{following.name}", following.url %>
        <br>
        <br>
      <% end %>
    </div>
  <% end %>
</section>
